/**index.wxss**/

.index-bd {
  position: absolute;
  height: 100%;
  overflow: scroll;
}

.index-bd .van-search{
  padding: 5px 16px;
}
/*搜索框  */

.searchForm {
  padding: 0 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  height: 44px;
  z-index:1;
  top:0;
  background-color: white;
}

.filter-picker {
  padding: 10px 15px;
}

.filter-button {
  display: inline-block;
}


.devide-line span {
  position: relative;
  top: -8px;
  background: #fff;
  padding: 0px 10px;
}

.devide-line {
  width: 90%; /* 分隔线的长度 */
  margin: auto;
  height: 1px; /* 分隔线粗细 */
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  background: #ccc;
  margin-top: 5px;
  margin-bottom: 15px;
  line-height: 25px;
}

.filter-btn-group {
  position: fixed;
  bottom: 0;
  width: 100%;
}

