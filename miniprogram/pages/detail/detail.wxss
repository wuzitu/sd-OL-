/* miniprogram/pages/detail/detail.wxss */
@import "../infos/infos.wxss";

.header-container {
  display: flex;
  flex-direction: row;
  height: 400rpx;
  background-color: #444;
  align-items: center;
  position: relative;
}

.gd-title {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.title-content {
  width: 100%;
  margin: 100rpx 20rpx;
  display: flex;
  justify-content: flex-start;
}

.title-content image {
  width: 200rpx;
  height: 200rpx;
}

.img-bg {
  filter: blur(16px);
  width: 100%;
  height: 100%;
  transform: scale(1.2);
}

.card .image {
  margin: 0 auto;
  width: 100px;
  height: 100px;
  opacity: 1;
  /* background-color: #eeeeee; */
}

.time {
  float: right;
  margin-top: 170px;
  color: #000;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 12px;
}

.weapon_img image {
  width: 83px;
  height: 22px;
  position: relative;
}

.skill-img image {
  width: 30px;
  height: 30px;
  position: relative;
}

/* .sub-img{
  width: 60rpx;
  height: 60rpx;
  float: left;
} */

.as-key {
  background: palevioletred;
}

.mk-card {
  width: 80px;
  height: 60px;
  position: relative;
  display: inline-block;
}

.mk-card image {
  width: 60px;
  height: 60px;
  max-width: 120px;
}

.mkcard-word {
  font-size: 24rpx;
  width: 120rpx;
}

/* 评论框 */

.comment {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.comment-title {
  color: rgb(218, 49, 49);
}

.devide-line span {
  background: #f6f6f6;
}

.weapon-data {
  border-bottom: 1px solid rgb(206, 205, 205);
}

.sp-data {
  border-bottom: 1px solid rgb(206, 205, 205);
}

.fd-bd-title {
  padding-left: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  border-left: 10rpx solid #47a86c;
}

.vanTab {
  z-index: 0;
}

.tabclass{
  min-height: 140px;
}