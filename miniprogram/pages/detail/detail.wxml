<van-panel title="技能" status="">
  <view wx:for="{{gundam.skill}}" wx:key="id" style="padding: 0 20px;">
    <view class='skill-img'>
      <image src='http://cdn.sdplayer.club/skill{{item.id}}.png'></image>
      <text>{{item.skill_name}}</text>
    </view>
    <view>
      <view>{{item.skill_detail}}</view>
    </view>
  </view>
</van-panel>
<van-panel title="机体数据" status="">
  <view style="padding:0 20px">
    <van-row>繁体名称：{{gundam.nameCN_G}}</van-row>
    <van-col span="6">飞行:{{gundam.para.fly}}</van-col>
    <van-col span="6">移动:{{gundam.para.move}}</van-col>
    <van-col span="6">boost:{{gundam.para.boost}}</van-col>
    <van-col span="9">boost回复:{{gundam.para.boost_back}}</van-col>
    <van-col span="9">boost消耗:{{gundam.para.boost_usage}}</van-col>
  </view>
</van-panel>
<view span="9">变身:{{gundam.R}}</view>
<van-panel title="梦服情报" status="">
  <view style="padding:0 20px">
    <van-row>登场日期：{{gundam.birth_date}}</van-row>
    <view>GB:{{gundam.GB_sale}}</view>
    <view>MB:{{gundam.MB_sale}}</view>
    <view>图纸:{{gundam.map_sale}}</view>
